      <div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title h3" id="staticBackdropLabel">Task</h5>
			<span data-bs-dismiss="modal" class="h3 cursor-pointer" aria-label="Close"><%= fa_icon 'times 1x' %></span>
		</div>
		<div class="container">
			<div class="mt-4">
				<p class="h4"><%= @task.task_name %></p>
				<p class="mt-3"><%= @task.task_description %></p>
			</div>
			<div class="mt-2">
				<% if @task.task_status? %>
					<div class="alert alert-success h5" role="alert">
